{
  "manifest_version": 3,
  "name": "Text Selector Assistant",
  "version": "1.2",
  "description": "Adds Explain and Query buttons on text selection.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Text Selector Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}