{
  "manifest_version": 3,
  "name": "Text Selector Assistant",
  "version": "1.3",
  "description": "Adds Explain and Query buttons on text selection.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "options_page": "options.html"
}